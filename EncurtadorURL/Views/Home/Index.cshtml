@{
    ViewData["Title"] = "Home Page";
}

@model EncurtadorURL.Models.ShortenViewModel

<h2>Encurtador de URL</h2>

<form method="post">
    <div>
        <label>Insira a URL original:</label>
        <input type="text" name="OriginalUrl" value="@Model.UrlOriginal" style="width: 400px;" />
    </div>
    <div>
        <button type="submit">Encurtar</button>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.UrlEncurtada))
{
    <p><strong>URL Encurtada:</strong> <a href="@Model.UrlEncurtada" target="_blank">@Model.UrlEncurtada</a></p>
}
@if (!string.IsNullOrEmpty(Model.MensagemErro))
{
    <p style="color:red">@Model.MensagemErro</p>
}
