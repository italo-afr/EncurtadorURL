@{
    ViewData["Title"] = "Home Page";
}

@model EncurtadorURL.Models.ShortenViewModel

<div class="container">
    <h1 class="title">Encurtador de URL</h1>

    <form asp-action="Index" asp-controller="Home" method="post" class="shorten-form">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="urlInput">URL original</label>
            <input type="text" id="urlInput" name="UrlOriginal" value="@Model.UrlOriginal" placeholder="https://..." />
        </div>

        <div class="form-actions">
            <button type="submit">Encurtar</button>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(Model.UrlEncurtada))
    {
    <div class="result success">
        <strong>URL Encurtada:</strong>
        <a href="@Model.UrlEncurtada" target="_blank">@Model.UrlEncurtada</a>
    </div>
    }

    @if (!string.IsNullOrEmpty(Model.MensagemErro))
    {
    <div class="result error">
        @Model.MensagemErro
    </div>
    }
</div>
